    script.
      // Enhanced search functionality with autocomplete
      document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        
        if (searchInput) {
          // Show/hide results container
          searchInput.addEventListener('focus', function() {
            if (this.value.length >= 2) {
              searchResults.style.display = 'block';
            }
          });
          
          // Hide results when clicking outside
          document.addEventListener('click', function(e) {
            if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
              searchResults.style.display = 'none';
            }
          });
          
          // Live search as user types
          let debounceTimer;
          searchInput.addEventListener('input', function() {
            clearTimeout(debounceTimer);
            
            if (this.value.length < 2) {
              searchResults.style.display = 'none';
              return;
            }
            
            debounceTimer = setTimeout(function() {
              fetchSearchResults(searchInput.value);
            }, 300);
          });
          
          // Function to fetch search results
          function fetchSearchResults(query) {
            // This would typically be an AJAX call to your server
            // For now, we'll simulate it with hardcoded product data
            const products = [
              { id: 1, name: 'Ctrl+Fit Hoodie', description: 'Premium cotton-blend hoodie' },
              { id: 2, name: 'Ctrl+Fit T-shirt', description: 'Breathable performance t-shirt' },
              { id: 3, name: 'Ctrl+Fit Shaker', description: 'Leak-proof protein shaker' },
              { id: 4, name: 'Ctrl+Fit Sweatpants', description: 'Comfortable sweatpants with stretch fabric' },
              { id: 5, name: 'Ctrl+Fit Shorts', description: 'Lightweight training shorts' },
              { id: 6, name: 'Ctrl+Fit WindBreaker', description: 'Windproof and water-resistant jacket' },
              { id: 7, name: 'Ctrl+Fit Leggings', description: 'High-performance compression leggings' },
              { id: 8, name: 'Ctrl+Fit Water Bottle', description: 'Insulated stainless steel bottle' },
              { id: 9, name: 'Ctrl+Fit Towel', description: 'Quick-dry microfiber gym towel' },
              { id: 10, name: 'Ctrl+Fit Gloves', description: 'Premium weightlifting gloves' },
              { id: 11, name: 'Ctrl+Fit Hat', description: 'Lightweight performance cap' },
              { id: 12, name: 'Ctrl+Fit Backpack', description: 'Durable gym backpack' }
            ];
            
            // Filter products based on query
            const lowerQuery = query.toLowerCase();
            const filtered = products.filter(product => {
              return product.name.toLowerCase().includes(lowerQuery) || 
                     product.description.toLowerCase().includes(lowerQuery);
            });
            
            // Display results
            displaySearchResults(filtered.slice(0, 5)); // Show top 5 results
          }
          
          // Function to display search results
          function displaySearchResults(results) {
            searchResults.innerHTML = '';
            
            if (results.length === 0) {
              const noResults = document.createElement('div');
              noResults.className = 'result-item';
              noResults.textContent = 'No matching products found';
              searchResults.appendChild(noResults);
            } else {
              results.forEach(function(product) {
                const resultItem = document.createElement('div');
                resultItem.className = 'result-item';
                resultItem.innerHTML = `<strong>${product.name}</strong><br><small>${product.description}</small>`;
                
                // Navigate to product page when clicked
                resultItem.addEventListener('click', function() {
                  window.location.href = `/product/${product.id}`;
                });
                
                searchResults.appendChild(resultItem);
              });
            }
            
            searchResults.style.display = 'block';
          }
        }
      });
    
    script.
      // Image loading fix script
      document.addEventListener('DOMContentLoaded', function() {
        // Find all images on the page
        const images = document.querySelectorAll('img');
        
        // Loop through each image
        images.forEach(function(img) {
          // Get the original src attribute
          const originalSrc = img.getAttribute('src');
          
          // Add error handling for product images
          if (originalSrc && originalSrc.includes('/images/Product')) {
            img.onerror = function() {
              console.log('Failed to load image:', this.src);
              
              // Try to fix the path by forcing a browser cache bypass
              const timestamp = new Date().getTime();
              const newSrc = this.src.split('?')[0] + '?t=' + timestamp;
              this.src = newSrc;
              
              // If it still fails, try an alternative approach
              this.onerror = function() {
                // Extract the product ID from the path
                const match = this.src.match(/Product(\d+)\.png/i);
                if (match && match[1]) {
                  const productId = match[1];
                  // Try with lowercase 'p' in 'product'
                  this.src = `/images/product${productId}.png?nocache=${timestamp}`;
                  
                  // If that still fails, load a default image
                  this.onerror = function() {
                    this.src = '/images/ctrl-fit.png';
                    this.onerror = null; // Prevent infinite loop
                  };
                }
              };
            };
          }
        });
      });